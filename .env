# ─── ResumeGod V4.0 Environment Config ───────────────────────────────────────
# Copy to .env and fill in values

# REQUIRED
OPENAI_API_KEY=sk-...

# Backend URL (what the frontend calls)
BASE_URL=http://localhost:8000
NEXT_PUBLIC_API_URL=http://localhost:8000

# Optional: ipinfo.io token for geolocation (higher rate limits)
IPINFO_TOKEN=

# Database (default: SQLite for dev, switch to PostgreSQL for prod)
DATABASE_URL=sqlite:///./resumegod.db
# For PostgreSQL prod:
# DATABASE_URL=postgresql://resumegod:changeme_in_prod@postgres:5432/resumegod

# PostgreSQL (only used with docker compose --profile prod)
POSTGRES_DB=resumegod
POSTGRES_USER=resumegod
POSTGRES_PASSWORD=changeme_in_prod
