generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  clerkId       String    @unique
  email         String    @unique
  credits       Int       @default(10)
  missions      Mission[]
  createdAt     DateTime  @default(now())
}

model Mission {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  type      String   
  result    Json
  createdAt DateTime @default(now())
}
